<h1>RealTimeProducts (WebSocket)</h1>

<form id="form-create">
  <label>Título <input name="title" required /></label>
  <label>Descripción <input name="description" required /></label>
  <label>Código <input name="code" required /></label>
  <label>Precio <input name="price" type="number" required /></label>
  <label>Stock <input name="stock" type="number" required /></label>
  <label>Categoría <input name="category" required /></label>
  <label>Estado
    <select name="status">
      <option value="true">verdadero</option>
      <option value="false">falso</option>
    </select>
  </label>
  <button type="submit">Crear producto</button>
</form>

<h3>Listado en tiempo real</h3>
<ul id="product-list"></ul>

<script src="/socket.io/socket.io.js"></script>
<script src="/public/js/realtime.js"></script>
